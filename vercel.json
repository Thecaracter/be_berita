{
    "version": 2,
    "env": {
        "NODE_ENV": "production",
        "FRONTEND_URL": "@frontend_url",
        "SUPABASE_URL": "@supabase_url",
        "SUPABASE_SERVICE_ROLE_KEY": "@supabase_service_role_key",
        "SMTP_HOST": "@smtp_host",
        "SMTP_PORT": "@smtp_port",
        "SMTP_SECURE": "@smtp_secure",
        "SMTP_USER": "@smtp_user",
        "SMTP_PASS": "@smtp_pass"
    },
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node",
            "config": {
                "maxDuration": 30,
                "memory": 1024
            }
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "api/index.js"
        }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-cache, no-store, must-revalidate"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        }
    ]
}